extends layout

block content
  .container
    .row
      .col-12
        h1= title
        p Welcome to the #{title}
    if user
      .row
        .col-12
          p Well Well #{user.name}
      .row
        .col-12
          a(href="/logout") Logout
    else
      .row
        .col-12
          a(class="btn btn-link",, href="/login") Please Login to see TOP Secret!